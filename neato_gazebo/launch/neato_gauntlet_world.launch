<!-- Launches Neato Gazebo simulation in an empty world -->
<launch>
  <arg name="gui" default="true"/>
  <!-- start Gazebo with an gauntlet world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
   <arg name="gui" value="$(arg gui)"/>
    <arg name="world_name" value="$(find neato_gazebo)/worlds/gauntlet.world"/>
 </include> 
  <!-- spawn the robot -->
  <include file="$(find neato_gazebo)/launch/robot.launch"/>
</launch>
