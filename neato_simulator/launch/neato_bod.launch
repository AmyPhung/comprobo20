<launch>
  <param name="use_sim_time" value="true"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="world_name" value="$(find neato_simulator)/worlds/empty.world"/>
  </include>
  
  <include file="$(find neato_simulator)/launch/includes/neato.launch.xml"/>

  <node name="spawn_bod_model" pkg="gazebo_ros" type="spawn_model"
	  args="-sdf -file $(find neato_simulator)/model/new_plane/model.sdf -model new_plane"/>

  <node pkg="neato_node" type="scan_to_pc2" name="pc2publisher"/>  
  <node pkg="topic_tools" type="relay" name="scan_relayer" args="scan stable_scan"/>  
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="30.0" />
  </node>
</launch>
